extends ../_shared/_base

block body
    .container
        br
        .col-md-9.text-left
            h3.no-top-margin Create your free account
            hr
            | In order to register and be able to submit listings, please fill the form below.
            br
            br
            form(action='/auth/sign-up', method='post',enctype='multipart/form-data')
                .form-group
                    label.control-label.col-sm-4(for='username') Username(*):
                    .control-field.col-sm-8.no-right-padding
                        input.form-control.input-sm(type='text', name='username', value='', required='', size='30')
                .form-group
                    label.control-label.col-sm-4(for='password')
                        | Password(*):
                    .control-field.col-sm-8.no-right-padding
                        input.form-control.input-sm(type='password', name='password', required='', size='30')
                .form-group
                    label.control-label.col-sm-4(for='usertype') I am:
                    .control-field.col-sm-8.no-right-padding
                        select#user_type.form-control.input-sm(name='usertype')
                            option(value='Agency') Agency
                            option(value='Private Seller') Private Seller
                .form-group
                    label.control-label.col-sm-4(for='agency')
                        | Agency Name:
                    .control-field.col-sm-8.no-right-padding
                        input.form-control.input-sm(type='text', name='agency', value='', size='30')
                .form-group
                    label.control-label.col-sm-4(for='firstname')
                        | First Name:
                    .control-field.col-sm-8.no-right-padding
                        input.form-control.input-sm(type='text', name='firstname', value='', size='30')
                .form-group
                    label.control-label.col-sm-4(for='lastname')
                        | Last Name:
                    .control-field.col-sm-8.no-right-padding
                        input.form-control.input-sm(type='text', name='lastname', value='', size='30')
                .form-group
                    label.control-label.col-sm-4(for='address')
                        | Address:
                    .control-field.col-sm-8.no-right-padding
                        textarea.form-control.input-sm(cols='22', rows='2', name='address')
                .form-group
                    label.control-label.col-sm-4(for='email')
                        | Email:
                    .control-field.col-sm-8.no-right-padding
                        input.form-control.input-sm(type='email', name='email', value='', size='30')
                .form-group
                    label.control-label.col-sm-4(for='phone')
                        | Phone:
                    .control-field.col-sm-8.no-right-padding
                        input.form-control.input-sm(type='text', name='phone', value='', size='30')
                .form-group
                    label.control-label.col-sm-4(for='website')
                        | Website:
                    .control-field.col-sm-8.no-right-padding
                        input.form-control.input-sm(type='text', name='website', value='', size='30')
                .form-group
                    label.control-label.col-sm-4(for='avatar')
                        | Avatar:
                    .control-field.col-sm-8.no-right-padding
                        input.form-control.input-sm(type='file', name='avatar', accept='.jpg,.jpeg,.png')
                br
                br
                input.pull-right.btn.btn-default.btn-gradient(type='submit', value='Submit')
                .clear
                br
                br