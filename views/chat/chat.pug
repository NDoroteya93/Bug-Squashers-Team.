extends ../_shared/_base

block body
    #chat-container.container
        .row
            .col-md-5
                .well
                    .panel-heading
                        h3.card-heading Users
                    #users(class="list-group")
                        table.table-users.table(border='0')
                            tbody
            .col-md-5.frame.well.hidden
                .panel-heading.username-chat
                    button.close(type='button', aria-label='Close')
                        span(aria-hidden='true') &times;
                div#messageForm
                    ul.list-messages
                form#messageSend(action='javascript:void(0)')
                    .form-group.chat
                        .msj-rta.macro(style='margin:auto')
                            .text.text-r(style='background:whitesmoke !important')
                                input.message-text(placeholder='Type a message')                      
block script                    
    script(src='/libs/socket.io-client/dist/socket.io.js')
    script
        | System.import('chat');

