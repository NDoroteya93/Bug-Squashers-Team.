extends _shared/_base

block content
    .container
        br
        .col-md-9.text-left
            h2.lfloat 
                =context.headline
                =context.price
            .clear
            br
            .justify-align
                .tabbable
                    ul.nav.nav-tabs
                        li.active
                            a(href='#tab-details', data-toggle='tab') Details
                        li
                            a(href='#tab-contact', onclick='javascript:show_map()', data-toggle='tab') Location
                        li
                            a(href='#tab-share', data-toggle='tab') Share
                    .tab-content
                        br
                        #tab-details.tab-pane.active
                            .col-md-6
                                | Location: 
                                b
                                    =context.location
                                br
                                | Size:
                                b 
                                    =context.size
                                |   m2
                                br
                                | Bedrooms:
                                b 
                                    =context.bedrooms
                                br
                                | Bathrooms:
                                b 
                                    =context.bathrooms
                                br
                                br
                                b
                                    =context.price
                                |    USD
                                br
                                br
                                b 
                                    =context.description
                                br
                            .col-md-6
                                .final-result-image
                                    a(href='/static/pictures/sell/' + context.avatar, rel='prettyPhoto[ad_gal]')
                                        img(src='/static/pictures/sell/' + context.avatar, width='300', alt='Exclusive apartment in downtown Bristol 43234')
                            .clear
                            hr
                            | 		Posted by:
                            b 
                                = context.user.username + "(" + context.user.usertype + "),"                                
                            img(src='/static/pictures/phone_icon.png', alt='phone icon')
                            b 
                                = context.user.phone
                            | Posted on:
                            b
                                = context.date
                            | , 
                            | Total Hits: 
                            b 760
