extends ../_shared/_base

block body
	#dashboard
		h1.page-header Dashboard
		.row.placeholders
			#map-dashboard(class="col-md-12")
		h2.sub-header List Added Estates
		.table-responsive
			table.table.table-striped
				thead
					tr
						th #
						th Headline
						th Property
						th Location
						th Price
						th Size
						th Bedrooms
						th Bathrooms
				tbody
					each sell in sells
						tr
							td.img-data
								img(src='/static/pictures/sell/' + sell.avatar)
							td 
								= sell.headline
							td 
								= sell.property
							td 
								= sell.address
							td 
								= sell.price
							td 
								= sell.size
							td 
								= sell.bedrooms
							td 
								= sell.bathrooms
							td
								p(data-placement='top', data-toggle='tooltip', title='Edit')
									button.btn.btn-primary.btn-xs(data-title='Edit', data-toggle='modal', data-target='#edit')
										i.fa.fa-pencil(aria-hidden='true')
							td
								p(data-placement='top', data-toggle='tooltip', title='Delete')
									button.btn.btn-danger.btn-xs(data-title='Delete', data-toggle='modal', data-target='#delete')
										i.fa.fa-trash(aria-hidden='true')

						each rent in rents
							td.img-data
								img(src='/static/pictures/sell/' + rent.avatar)
							td 
								= rent.headline
							td 
								= rent.property
							td 
								= rent.address
							td 
								= rent.price
							td 
								= rent.size
							td 
								= rent.bedrooms
							td 
								= rent.bathrooms
							td
								p(data-placement='top', data-toggle='tooltip', title='Edit')
									button.btn.btn-primary.btn-xs(data-title='Edit', data-toggle='modal', data-target='#edit')
										i.fa.fa-pencil(aria-hidden='true')
							td
								p(data-placement='top', data-toggle='tooltip', title='Delete')
									button.btn.btn-danger.btn-xs(data-title='Delete', data-toggle='modal', data-target='#delete')
										i.fa.fa-trash(aria-hidden='true')

				
